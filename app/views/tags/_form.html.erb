<div data-controller="tags" data-tags-default-names="<%= tag_names %>">
  <template data-target="tags.template">
    <span class="mr-1">
      <%= text_field_tag name, nil, readonly: true, class: 'form-control d-inline-block mb-2 w-25' %>
      <span data-action="click->tags#remove" class="cursor-pointer p-1">&times;</span>
    </span>
  </template>

  <div data-target="tags.names">
  </div>

  <input autocomplete="off"
    placeholder="Press &quot;Enter&quot; to add tag"
    data-controller="autocomplete--tag"
    data-action="keypress->tags#keypress"
    data-target="tags.input autocomplete--tag.textarea"
    data-autocomplete--tag-tag-names="<%= autocomplete_tag_names %>"
    class="form-control w-50" />
</div>
