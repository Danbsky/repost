<div>
  <span>
    <%= image_tag post.user.avatar_with_default, width: 24 %>
    <%= post.user.name_with_default %>
    (@<%= post.user.screen_name %>)
  </span>
  <%= link_to post.posted_on, post %>
  <div>
    <%= sanitize(markdown(post.content)) %>
  </div>
  <span>Comments: <%= post.comments_count %></span>
  <span>Likes: <%= post.likes_count %></span>
  <%= render 'stars/form', post: post %>
  <%= render 'likes/form', likable: post, url: api_post_likes_path(post) %>
  <% if post.tags.any? %>
    <div>
      <% post.tags.each do |tag| %>
        <span>#<%= tag.name %></span>
      <% end %>
    </div>
  <% end %>
  <% if post.user == current_user %>
    <span>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  <% end %>
</div>
