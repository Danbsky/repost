<div class="container">
  <div class="row">
    <div class="col">
      <%= render 'posts/nav' %>

      <div class="list-group small">
        <% @posts.each do |post| %>
          <%= link_to post, class: 'list-group-item list-group-item-action d-flex justify-content-between' do %>
            <div>
              <span class="mr-1"><%= l(post.posted_on, format: :long) %></span>

              <%= image_tag post.user.avatar_with_default, width: 24, class: 'rounded-circle' %>
              <%= post.user.name_with_default %>
            </div>

            <div class="align-self-center small">
              <% if post.starred_by?(current_user) %>
                <span class="text-warning"><%= mi.star %></span>
              <% end %>
              <span class="label ml-1"><%= mi.textsms %> <%= post.comments_count %></span>
              <span class="label ml-1"><%= mi.thumb_up %> <%= post.likes_count %></span>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="mt-3 mb-4">
        <%= paginate(@posts) %>
      </div>
    </div>

    <div class="col-4">
      <%= render 'posts/search_form' %>
    </div>
  </div>
</div>
