<%= current_team.name %>

<%= form_for(@post) do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>

<% current_team.posts.order(created_at: :desc).each do |post| %>
  <%= post.member.name %> (@<%= post.member.screen_name %>)
  <%= post.content %>
  <%= post.created_at %>
<% end %>
