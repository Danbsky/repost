<h1>Teams::Users#index</h1>

<%= render 'shared/errors', object: @user %>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= image_tag user.avatar_with_default('24x24') %>
        <%= user.name_with_default %>
        (@<%= user.screen_name %>)
      </td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= form_with model: user, url: teams_user_path(user), local: true do |f| %>
          <%= f.hidden_field :role, value: user.role_value_for_update %>
          <%= f.submit user.role_label_for_update %>
        <% end %>
        <%= link_to 'Delete', teams_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
